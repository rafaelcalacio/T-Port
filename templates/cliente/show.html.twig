{% extends 'base.html.twig' %}

{% block title %}Cliente{% endblock %}

{% block body %}
    <h1>Cliente</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cliente.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ cliente.nome }}</td>
            </tr>
            <tr>
                <th>Cpf</th>
                <td>{{ cliente.cpf }}</td>
            </tr>
            <tr>
                <th>Telefone</th>
                <td>{{ cliente.telefone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ cliente.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cliente_index') }}"class="btn btn-secondary btn-sm">Voltar</a>

    <a href="{{ path('cliente_edit', {'id': cliente.id}) }}"class="btn btn-warning btn-sm">Editar</a>

    {{ include('cliente/_delete_form.html.twig') }}
{% endblock %}
